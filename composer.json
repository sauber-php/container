{
    "name": "sauber-php/container",
    "description": "The Container component for the Sauber PHP framework",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "role": "Developer",
            "name": "Steve McDougall",
            "email": "juststevemcd@gmail.com",
            "homepage": "https://www.juststeveking.uk/"
        }
    ],
    "autoload": {
        "psr-4": {
            "Sauber\\Container\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sauber\\Container\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1",
        "league/container": "^4.2",
        "psr/container": "^2.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "preferred-install": "dist",
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "require-dev": {
        "pestphp/pest": "^1.21",
        "phpstan/phpstan": "^1.7"
    }
}
